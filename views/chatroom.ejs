<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <title> FSE Chat Room </title>
        <link rel="stylesheet" href="styles.css"/>
        <script src="/socket.io/socket.io.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script src="chat.js"></script>
    </head>
    <body>
            <header>
                <span class="chatRoomHeader"> FSE Chat Room </span>
                <a class="logout" href="/login.html"> Logout</a>
            </header>

            <main>
                    <div class="oldpostDisplayContainer" style="width:400px;length:600px;">
                    <% oldposts.forEach(function(oldpost){ %>
                        <div class="oldpost">
                            <p class="oldpostUser"><%=oldpost.userName%></p>
                            <p class="oldpostTime"><%=new Date(oldpost.timeStamp).toLocaleString()%></p>
                            <p class="oldpostMessage"><%=oldpost.message%></p>
                        </div>
                    <% }) %>
                    </div>

                    <div class="postInputSection">
                        <textarea class="postMessage" rows=5></textarea>
                        <button class="postButton">Post</button>
                    </div>

            </main>
    </body>
</html>